#!/bin/bash
#
# Send messages via https://pushover.net/
#
#      /__/\         /  /\         /__/\
#      \  \:\       /  /::\       |  |::\
#       \__\:\     /  /:/\:\      |  |:|:\
#   ___ /  /::\   /  /:/~/::\   __|__|:|\:\
#  /__/\  /:/\:\ /__/:/ /:/\:\ /__/::::| \:\
#  \  \:\/:/__\/ \  \:\/:/__\/ \  \:\~~\__\/
#   \  \::/       \  \::/       \  \:\
#    \  \:\        \  \:\        \  \:\
#     \  \:\        \  \:\        \  \:\
#      \__\/         \__\/         \__\/
#

curl \
    -s \
    -F "token=$PUSHOVER_TOKEN" \
    -F "user=$PUSHOVER_USER" \
    -F "message=$(cat)" \
    https://api.pushover.net/1/messages.json \
    > /dev/null
