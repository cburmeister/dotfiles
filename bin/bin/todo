#!/bin/bash
#
# Find and open the nearest TODO file (or -g for the one in my homedir)
#

if [ "$1" = "-g" ]; then
    tpath=$HOME
else
    tpath=$(pwd)
    while [[ "$tpath" != "" && ! -e "$tpath/TODO" ]]; do
        tpath=${tpath%/*}
    done
    [ -z "$tpath" ] && tpath=$HOME
fi

$EDITOR "$tpath/TODO"
